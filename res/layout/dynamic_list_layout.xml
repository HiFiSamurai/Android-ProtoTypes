<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ListView android:id="@+id/dynamicList" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_above="@+id/relativeLayout1"></ListView>
	<RelativeLayout android:layout_height="50dp"
		android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true">
		<ProgressBar android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true" android:id="@+id/dynamicProgress"
			android:visibility="gone" android:layout_height="wrap_content"
			android:layout_width="wrap_content"></ProgressBar>
	</RelativeLayout>

</RelativeLayout>
