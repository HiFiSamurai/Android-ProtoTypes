<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:gravity="center"
	android:orientation="vertical" android:layout_height="fill_parent">
	<RelativeLayout android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:layout_width="wrap_content"
			android:layout_height="50dip" android:id="@+id/media_review_new"
			android:layout_centerHorizontal="true"></Button>
		<ImageButton android:layout_width="wrap_content" android:id="@+id/media_review_toggle" android:layout_height="50dip" android:src="@android:drawable/ic_menu_revert" android:layout_alignParentTop="true" android:layout_alignParentRight="true"></ImageButton>
	</RelativeLayout>
	<ListView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/media_review_listview"></ListView>
</LinearLayout>
